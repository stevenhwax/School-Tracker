<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Course By Status"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/reportCbsDateTextView"
                    android:layout_width="150dp"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:text="XX/XX/XXXX"
                    android:textSize="20dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="In Process:"/>

                <TextView
                    android:id='@+id/inProcessCountTextView'
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="XX"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Completed:"/>

                <TextView
                    android:id='@+id/completedCountTextView'
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="XX"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Dropped:"/>

                <TextView
                    android:id='@+id/droppedCountTextView'
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="XX"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="Plan to Take:"/>

                <TextView
                    android:id='@+id/planToTakeCountTextView'
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"                    android:layout_marginLeft="20dp"
                    android:layout_marginVertical="10dp"
                    android:text="XX"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>