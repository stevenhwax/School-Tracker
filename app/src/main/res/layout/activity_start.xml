<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/termListButton"
                android:layout_width="290dp"
                android:layout_height="61dp"
                android:text="Terms List"
                android:layout_marginTop="250dp"
                android:layout_gravity="center"
                android:onClick="termListButtonOnClick"/>

            <Button
                android:id="@+id/courseListButton"
                android:layout_width="290dp"
                android:layout_height="61dp"
                android:text="Course List"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:onClick="courseListButtonOnClick"/>

            <Button
                android:id="@+id/assessmentListButton"
                android:layout_width="290dp"
                android:layout_height="61dp"
                android:text="Assessment List"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:onClick="assessmentListButtonOnClick"/>

            <Button
                android:layout_width="290dp"
                android:layout_height="61dp"
                android:text="Reports"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:onClick="reportsListButtonOnClick"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>